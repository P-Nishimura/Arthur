<div class="container">
    <%= form_for current_user do |f|%>
        <div class="field">
            <%= f.label :nickname %> <em>(10 characters maximum)</em><br />
            <%= f.text_field :nickname, autofocus: true, maxlength: "10" %>
        </div>
        <div class="field">
            <%= f.label :reason %>
            <%= f.text_field :reason%>
        </div>
        <div class="form-group">
            <%= f.submit "送信", class: "btn btn-primary withripple" %>
        </div>
    <% end %>
</div>

<% if opinion.unfortunate %>
    <div class="card-panel hoverable" id="opinion">
        <p><%= simple_format opinion.content %></p>
        <p>Nickname: <%= opinion.user.nickname %></p>
        <hr>
        <% if current_user.id == opinion.user.id%>
            <%= link_to "削除", "/topic/#{opinion.topic.id}/opinions/#{opinion.id}", method: :delete, class: "btn btn-primary withripple" %>
        <% end %>
        <% if user_signed_in? && current_user.id==opinion.topic.user.id %>
            <div class="button_form">
                <%= form_tag("/topic/#{opinion.topic.id}/opinion/#{opinion.id}", method: :patch) do %>
                    <input type="hidden" name="unfortunate" value="false">
                    <button class="btn btn-primary withripple" type="submit" value="save">この発言を閉じる</button>
                <% end %>
            </div>
        <% end %>
    </div>
    <% else %>
        <div class="card-panel hoverable" id="opinion">この発言は非表示です<hr></div>
<% end %>
